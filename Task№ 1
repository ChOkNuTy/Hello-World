using HorizonSideRobots

function Taskâ„–1!(r)
    side=Ost
    num_steps = along!(r,side)
    side=inverse(side)
    along!(r,side,num_steps)
    side=West
    num_steps = along!(r,side)
    side=inverse(side)
    along!(r,side,num_steps)
    side=Sud
    num_steps = along!(r,side)
    side=inverse(side)
    along!(r,side,num_steps)
    side=Nord
    num_steps = along!(r,side)
    side=inverse(side)
    along!(r,side,num_steps)
end

function inverse(side::HorizonSide)::HorizonSide
    if side==Nord
        return Sud
    elseif side==West
        return Ost
    elseif side==Sud
        return Nord
    elseif side==Ost
        return West
    end
end

function along!(r,side)
    c=0
    while !isborder(r,side)
        putmarker!(r)
        move!(r,side) 
        c+=1
    end
    putmarker!(r)
    return c
end

function along!(r,side,num_steps)
    for _ in 1:num_steps
        move!(r,side)
    end
end
