using HorizonSideRobots

function Task№2(r)
    move_to_angle!(r)
    mark_perimeter!(r)
end

fusing HorizonSideRobots

function Task№2(r)
    move_to_angle!(r)

    for side=(Nord,Ost,Sud,West)
        along_and_putmarkers!(r,side)
    end

    for side=(Nord,Ost)
       
end

function move_to_angle!(r)
    count_1=0
    side=West
    while !isborder(r,side)
        move!(r,side)
        count_1 +=1 
    end
    side=Sud
    count_2=0
    while !isborder(r,side)
        move!(r,side)
        count_2 +=1 
    end
end

function mark_perimeter!(r)
    for side=(Nord,Ost,Sud,West)
    along_and_putmarkers!(r,side)
    end
end

function along_and_putmarkers!(r,side) 
    while !isborder(r,side)
        putmarker!(r)
        move!(r,side)        
    end
    putmarker!(r)
end

function along!(r,side,num_steps)
    for _ in 1:num_steps
        move!(r,side)
    end
end
