using HorizonSideRobots

function Taskâ„–1(r)
    for side in (Nord,West,Sud,Ost)
    num_steps = along!(r,side)
    inverse(side)
    along!(r,side,num_steps)
    num_steps = along!(r,side)
    inverse(side)
    along!(r,side,num_steps)

end


function inverse(side::HorizonSide)::HorizonSide
    if side==Nord
        return Sud
    elseif side==West
        return Ost
    elseif side==Sud
        return Nord
    elseif side==Ost
        return West
    end
end

function along!(r,side)
    c=0
    while !isborder(r)
        putmarker!(r)
        move!(r,side) 
        c+=1       
    end
    putmarker!(r)
    return c
end

function num_steps_along!(r,side)
    num_steps =0
    while !isborder(r)
        move!(r,side)
        num_steps +=1
    end
    return num_steps
end

function along!(r,side,num_steps)
    for _ in 1:num_steps
        move!(r,side)
end


