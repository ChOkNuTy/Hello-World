using HorizonSideRobots


function Krest!(r)  
        side=Nord
        num_steps_along!(r,side,num_steps)
        reverse(side)
end

function num_steps_along!(r,side,num_steps)
    while !isborder(r,side)
        move!(r,side)
        putmarker!(r)
    end
    putmarker!(r)
end

function inverse(side::HorizonSide)::HorizonSide
    if side==Nord
        return Sud
    elseif side==West
        return Ost
    elseif side==Sud
        return Nord
    elseif side==Ost
        return West
    end
end
